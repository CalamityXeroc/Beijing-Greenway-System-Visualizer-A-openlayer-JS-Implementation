# Capacitor 移动端应用环境配置示例
# 复制此文件为 .env.capacitor 并填入实际值
# 注意：不要将含有真实密钥的文件提交到版本控制

# ========================================
# API 配置
# ========================================

# 后端 API 地址
# 生产环境可能需要HTTPS和域名
VITE_API_BASE_URL=https://api.greenway.com
VITE_API_TIMEOUT=30000

# ========================================
# 第三方 API 密钥
# ========================================

# 高德地图 API Key
VITE_AMAP_KEY=your_amap_api_key

# 百度地图 API Key
VITE_BAIDU_MAP_KEY=your_baidu_map_key

# ========================================
# 原生功能配置
# ========================================

# 启用地理位置功能
VITE_ENABLE_GEOLOCATION=true

# 启用相机功能
VITE_ENABLE_CAMERA=true

# 启用文件系统
VITE_ENABLE_FILESYSTEM=true

# 高精度定位（消耗更多电量）
VITE_HIGH_ACCURACY_GEOLOCATION=false

# ========================================
# 移动端特定配置
# ========================================

# 应用名称
VITE_APP_NAME=北京绿道系统

# 应用版本
VITE_APP_VERSION=1.0.0

# 应用 ID（与 capacitor.config.json 保持一致）
VITE_APP_ID=com.greenway.mobile

# 启用离线模式
VITE_OFFLINE_MODE=true

# 离线数据缓存大小（MB）
VITE_CACHE_SIZE=50

# ========================================
# 调试配置
# ========================================

# 启用开发者工具
VITE_DEBUG_MODE=false

# 启用性能监测
VITE_ENABLE_PROFILING=false

# 启用网络日志
VITE_DEBUG_NETWORK=false

# ========================================
# 分析和追踪
# ========================================

# Google Analytics ID
VITE_GOOGLE_ANALYTICS_ID=

# 自定义分析服务端点
VITE_ANALYTICS_ENDPOINT=

# ========================================
# 安全配置
# ========================================

# 启用 HTTPS 强制
VITE_FORCE_HTTPS=true

# CSP（内容安全策略）启用
VITE_CSP_ENABLED=true

# 启用请求签名验证
VITE_VERIFY_REQUEST_SIGNATURE=true

# ========================================
# 功能开关
# ========================================

# 启用全景图功能
VITE_ENABLE_PANORAMA=true

# 启用天气功能
VITE_ENABLE_WEATHER=true

# 启用分享功能
VITE_ENABLE_SHARING=true

# 启用离线地图
VITE_ENABLE_OFFLINE_MAPS=false
